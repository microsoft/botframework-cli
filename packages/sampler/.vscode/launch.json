{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "tsc-version",
            "program": "${workspaceFolder}/node_modules/typescript/bin/tsc",
            "args": [
                "--version"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "tsc-version-global",
            "preLaunchTask": "tscversion",
            "program": "${workspaceFolder}/node_modules/typescript/bin/tsc",
            "args": [
                "--version"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "node-version-global",
            "preLaunchTask": "nodeversion",
            "program": "${workspaceFolder}/node_modules/typescript/bin/tsc",
            "args": [
                "--version"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "npm-version-global",
            "preLaunchTask": "npmversion",
            "program": "${workspaceFolder}/node_modules/typescript/bin/tsc",
            "args": [
                "--version"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "build all",
            "program": "${workspaceFolder}/node_modules/typescript/bin/tsc",
            "args": [
                "--build"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "clean clean",
            "program": "${workspaceFolder}/node_modules/typescript/bin/tsc",
            "args": [
                "--build",
                "--clean"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "test all",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                // ---- NOTE-allow-auto-discovery ---- "${workspaceFolder}/lib/test/**/*.js"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "lint src *.ts files",
            "program": "${workspaceFolder}/node_modules/eslint/bin/eslint",
            "args": [
                "${workspaceFolder}/src/**/*.ts",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "lint test *.ts files",
            "program": "${workspaceFolder}/node_modules/eslint/bin/eslint",
            "args": [
                "${workspaceFolder}/test/**/*.ts",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        }
    ]
}