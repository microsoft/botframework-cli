{
    "$schema": "http://json-schema.org/draft-07/schema",
    "dimension": {
        "type": "object",
        "$mappings": ["@{concat('dimension:', property)}", "dimension"],
        "properties": {
            "number": {
                "type": "number"
            },
            "units": {
                "type": "string"
            }
        },
        "required": ["number", "units"],
        "$templates": ["dimension.lu","objectProperty.lg", "stringAsk.dialog","dimensionSet.dialog"]
    }
}