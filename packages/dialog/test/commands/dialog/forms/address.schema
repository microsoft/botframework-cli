{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions":{
        "address":{
            "type": "object",
            "properties": {
                "HomeStreet": { 
                    "type": "string",
                    "$mappings": ["utterance"]
                },
                "HomeCity": { 
                    "type": "string",
                    "$mappings": ["utterance"]
                },
                "HomeZip": { 
                    "type": "string",
                    "pattern": "^[0-9]{5}(?:-[0-9]{4})?$",
                    "$mappings": ["utterance","number"]
                },
                "Email": {
                    "type": "string",
                    "$mappings": ["email"]
                }
                },
            "required":["HomeStreet", "HomeCity", "HomeZip", "Email"],
            "$requires": [
                "standard.schema"
            ]
        }
    }
}