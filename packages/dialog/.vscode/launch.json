    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Dialog Merge Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/commands/dialog/merge.test.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Dialog Verify Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}",
            "sourceMaps": false,
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/commands/dialog/verify.test.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Dialog Generator Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/commands/dialog/generator.test.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "BotBuilder schema",
            "program": "${workspaceFolder}/bin/run",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ],
            "args": [
                "dialog:merge",
                "libraries/**/*.schema",
                "-u",
                "-b", "master",
                "-o", "schemas/sdk.schema",
                "--verbose"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "c:/users/chrimc/source/repos/botbuilder-dotnet"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Generate Sandwich Form",
            "program": "${workspaceFolder}/bin/run",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ],
            "args": [
                "dialog:generate",
                "${workspaceFolder}/test/commands/dialog/forms/sandwich.form.dialog",
                "-o",
                "${env:TEMP}/sandwich.out",
                "--force",
                "--verbose",
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Generate Activity Form",
            "program": "${workspaceFolder}/bin/run",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ],
            "args": [
                "dialog:generate",
                "${workspaceFolder}/test/commands/dialog/forms/activity.form.dialog",
                "-o",
                "${env:TEMP}/activity.out",
                "--force",
                "--verbose",
                "--schema",
                "https://raw.githubusercontent.com/microsoft/botbuilder-dotnet/chrimc/map/schemas/sdk.schema"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Generate Contact Form",
            "program": "${workspaceFolder}/bin/run",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ],
            "args": [
                "dialog:generate",
                "${workspaceFolder}/test/commands/dialog/forms/contact.form.dialog",
                "-o",
                "${env:TEMP}/contact.out",
                "--force",
                "--verbose",
                "--schema",
                "https://raw.githubusercontent.com/microsoft/botbuilder-dotnet/chrimc/map/schemas/sdk.schema"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Generate Opportunity Form",
            "program": "${workspaceFolder}/bin/run",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ],
            "args": [
                "dialog:generate",
                "${workspaceFolder}/test/commands/dialog/forms/opportunity.form.dialog",
                "-o",
                "${env:TEMP}/opportunity.out",
                "--force",
                "--verbose",
                "--schema",
                "https://raw.githubusercontent.com/microsoft/botbuilder-dotnet/chrimc/map/schemas/sdk.schema"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}