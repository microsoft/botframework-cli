{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "antlr-debug",
            "request": "launch",
            "name": "Debug Current Grammar",
            "input": "test/commands/dialog/forms/input.txt",
            "startRule": "doc",
            "visualParseTree": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Dialog Merge Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "cwd":"${workspaceFolder}",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/commands/dialog/merge.test.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Dialog Verify Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "cwd":"${workspaceFolder}",
            "sourceMaps": false,
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/commands/dialog/verify.test.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Dialog Form Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/commands/dialog/form.test.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },    
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\bin\\run",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ],
            "args": [
                "dialog:merge",
                "-f",
                "c:/source/github/botbuilder-dotnet/**/*.schema"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Generate Sandwich Form",
            "program": "${workspaceFolder}\\bin\\run",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ],
            "args": [
                "dialog:form",
                "${workspaceFolder}/test/commands/dialog/forms/sandwich.form.dialog",
                "-o",
                "D:/WorkStation/form.bot.tmp",
                "--force",
                "--verbose"
            ]
        }
    ]
}