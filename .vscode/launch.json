{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Dialog Merge Tests",
            "preLaunchTask": "${defaultBuildTask}",
            "program": "${workspaceFolder}/packages/dialog/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}/packages/dialog",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "-g",
                ".*dialog:merge.*"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std",
            "outFiles": [
                "./package/dialog/lib/**"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Dialog Verify Tests",
            "preLaunchTask": "${defaultBuildTask}",
            "program": "${workspaceFolder}/packages/dialog/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}/packages/dialog",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "-g",
                ".*dialog:verify.*"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std",
            "outFiles": [
                "./package/dialog/lib/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "LUIS Tests",
            "preLaunchTask": "${defaultBuildTask}",
            "program": "${workspaceFolder}/packages/luis/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}/packages/luis",
            "args": [
                "test/",
                "--timeout",
                "999999",
                "--colors",
                "-g",
                ".*"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "./lib/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "LU Tests",
            "preLaunchTask": "${defaultBuildTask}",
            "program": "${workspaceFolder}/packages/luis/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}/packages/lu",
            "args": [
                "test/",
                "--timeout",
                "999999",
                "--colors",
                "-g",
                ".*"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std",
            "outFiles": [
                "./packages/lu/lib/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "LUIS Build Tests",
            "preLaunchTask": "${defaultBuildTask}",
            "program": "${workspaceFolder}/packages/lu/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}/packages/lu",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "-g",
                ".*luis:build.*"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std",
            "outFiles": [
                "./packages/lu/lib/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "BotBuilder schema",
            "preLaunchTask": "${defaultBuildTask}",
            "program": "${workspaceFolder}/packages/dialog/bin/run",
            "outputCapture": "std",
            "outFiles": [
                "./packages/dialog/lib/**"
            ],
            "args": [
                "dialog:merge",
                "libraries/**/*.schema",
                "-o",
                "${env:TEMP}/sdk.schema",
                "--verbose"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}/../botbuilder-dotnet"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "BotBuilder project",
            "preLaunchTask": "${defaultBuildTask}",
            "program": "${workspaceFolder}/packages/dialog/bin/run",
            "outputCapture": "std",
            "outFiles": [
                "./packages/dialog/lib/**"
            ],
            "args": [
                "dialog:merge",
                "tests/Microsoft.Bot.Builder.Dialogs.Declarative.Tests/*.csproj",
                "-o",
                "${env:TEMP}/app.schema"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}/../botbuilder-dotnet"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Dialog merge test schema",
            "preLaunchTask": "${defaultBuildTask}",
            "program": "${workspaceFolder}/packages/dialog/bin/run",
            "outputCapture": "std",
            "outFiles": [
                "./packages/dialog/lib/**"
            ],
            "args": [
                "dialog:merge",
                "schemas/*.schema",
                "-o",
                "schemas/app.schema",
                "-d"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}/packages/dialog/test/commands/dialog"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "LUIS Build Sandwich",
            "preLaunchTask": "${defaultBuildTask}",
            "program": "${workspaceFolder}/packages/luis/bin/run",
            "outputCapture": "std",
            "outFiles": [
                "./packages/luis/lib/**",
                "./packages/lu/lib/**"
            ],
            "args": [
                "luis:build",
                "--in",
                ".",
                "--authoringKey",
                "${env:LUIS_AUTHORING_KEY}",
                "--botName",
                "sandwich",
                "--dialog",
                "--suffix",
                "${env:USERNAME}",
                "--out",
                "."
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${env:TEMP}/sandwich.out/luis"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "LUIS Build DynamicLists",
            "preLaunchTask": "${defaultBuildTask}",
            "program": "${workspaceFolder}/packages/lu/bin/run",
            "outputCapture": "std",
            "outFiles": [
                "./packages/lu/lib/**",
                "./pacakges/luis/lib/**"
            ],
            "args": [
                "luis:build",
                "--in",
                ".",
                "--authoringKey",
                "${env:LUIS_AUTHORING_KEY}",
                "--botName",
                "dynamicLists",
                "--dialog"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}/../botbuilder-dotnet/tests/Microsoft.Bot.Builder.Dialogs.Adaptive.Tests/tests/LUISRecognizerTests"
        }
    ]
}