{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2017",
    "strict": true,
    "useUnknownInCatchVariables": false
  },
  "ts-node": {
    "transpileOnly": true
  }
}
