{
    "id": "dc28e910-44e2-4c2a-9c2a-1eb72b891d68",
    "name": "bot-deployment",
    "friendlyName": "Bot Deployment",
    "description": "Deploys a bot to Azure",
    "helpMarkDown": "",
    "category": "Utility",
    "author": "SOUTHWORKS",
    "version": {
        "Major": 0,
        "Minor": 7,
        "Patch": 1
    },
    "instanceNameFormat": "Bot Deployment",
    "groups": [
        {
            "name": "azure",
            "displayName": "Azure Details",
            "isExpanded": true
        },
        {
            "name": "template",
            "displayName": "Template",
            "isExpanded": true
        },
        {
            "name": "bot",
            "displayName": "Bot",
            "isExpanded": true
        },
        {
            "name": "channels",
            "displayName": "Channels",
            "isExpanded": true
        },
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "azureSubscription",
            "type": "connectedService:AzureRM",
            "label": "Azure Subscription",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select the Azure Resource Manager subscription for the deployment.",
            "groupname": "azure"
        },
        {
            "name": "resourceGroup",
            "type": "picklist",
            "label": "Resource Group",
            "required": true,
            "helpMarkDown": "Provide the name of a resource group.",
            "properties": {
                "EditableOptions": "True"
            },
            "groupname": "azure"
        },
        {
            "name": "location",
            "type": "pickList",
            "label": "Location",
            "required": true,
            "helpMarkDown": "Location for deploying the resource group.",
            "properties": {
                "EditableOptions": "True"
            },
            "groupname": "azure"
        },
        {
            "name": "template",
            "type": "filepath",
            "label": "Template",
            "required": true,
            "helpMarkDown": "Specify the path or a pattern pointing to the Azure Resource Manager template.",
            "groupname": "template"
        },
        {
            "name": "appId",
            "type": "text",
            "label": "App ID",
            "required": true,
            "helpMarkDown": "Provide an Azure App ID.",
            "groupname": "template"
        },
        {
            "name": "appSecret",
            "type": "text",
            "label": "App Secret",
            "required": true,
            "helpMarkDown": "Provide an Azure App Secret.",
            "groupname": "template"
        },
        {
            "name": "botName",
            "type": "text",
            "label": "Bot's Name",
            "required": true,
            "helpMarkDown": "Provide a name for the bot.",
            "groupname": "bot"
        },
        {
            "name": "zipFile",
            "type": "filepath",
            "label": "Zipped Bot",
            "required": true,
            "helpMarkDown": "Specify the path to the compressed zip folder containing the bot.",
            "groupname": "bot"
        },
        {
            "name": "botSku",
            "type": "text",
            "label": "Bot Sku",
            "required": false,
            "helpMarkDown": "Specify the pricing tier of the Bot Service Registration. Acceptable values are F0 and S1. Default to F0.",
            "groupname": "bot"
        },
        {
            "name": "directLineChannel",
            "type": "boolean",
            "label": "Direct Line",
            "required": false,
            "defaultValue": false,
            "helpMarkDown": "Check to connect the bot with the Direct Line Channel.",
            "groupname": "channels"
        },
        {
            "name": "slackChannel",
            "type": "boolean",
            "label": "Slack",
            "required": false,
            "defaultValue": false,
            "helpMarkDown": "Check to connect the bot with the Slack Channel.",
            "groupname": "channels"
        },
        {
            "name": "teamsChannel",
            "type": "boolean",
            "label": "Teams",
            "required": false,
            "defaultValue": false,
            "helpMarkDown": "Check to connect the bot with the Teams Channel.",
            "groupname": "channels"
        },
        {
            "name": "slackVerificationToken",
            "type": "text",
            "label": "Slack Verification Token",
            "required": false,
            "helpMarkDown": "Provide the verification token from the Slack Application.",
            "groupname": "channels",
            "visibleRule": "slackChannel = TRUE"
        },
        {
            "name": "slackBotToken",
            "type": "text",
            "label": "Slack Bot Token",
            "required": false,
            "helpMarkDown": "Provide the bot token from the Slack Application.",
            "groupname": "channels",
            "visibleRule": "slackChannel = TRUE"
        },
        {
            "name": "slackClientSigningSecret",
            "type": "text",
            "label": "Slack Client Signing Secret",
            "required": false,
            "helpMarkDown": "Provide the client signing secret from the Slack Application.",
            "groupname": "channels",
            "visibleRule": "slackChannel = TRUE"
        },
        {
            "name": "validationMode",
            "type": "boolean",
            "label": "Validation Mode",
            "required": false,
            "defaultValue": false,
            "helpMarkDown": "Check for validate whether the template is syntactically correct."
        }
    ],
    "dataSourceBindings": [
        {
            "target": "resourceGroup",
            "endpointId": "$(azureSubscription)",
            "dataSourceName": "AzureResourceGroups"
        },
        {
            "target": "location",
            "endpointId": "$(azureSubscription)",
            "dataSourceName": "AzureLocations"
        }
      ],
    "execution": {
        "Node": {
            "target": "index.js"
        }
    }
}